<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorActivatedHighlight">@color/primaryLight</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimaryBlack</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textColorHint">@color/textHintBlack</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>
</resources>
