<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yardages.YardagesFragment"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp">

        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point A"
            android:id="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_alignParentStart="false"
            android:textColor="@color/textPrimaryWhite"
            android:background="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Latitude1"
            android:id="@+id/latitude1"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/button1"
            android:textColor="@color/textPrimaryBlack"
            android:layout_alignStart="@+id/button1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Longitude1"
            android:id="@+id/longitude1"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/latitude1"
            android:textColor="@color/textPrimaryBlack"
            android:layout_centerHorizontal="true" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point B"
            android:id="@+id/button2"
            android:background="@color/primary"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/latitude1"
            android:textColor="@color/textPrimaryWhite"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Latitude2"
            android:id="@+id/latitude2"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textPrimaryBlack"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Longitude2"
            android:id="@+id/longitude2"
            android:layout_below="@+id/latitude2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textPrimaryBlack"
            android:layout_marginTop="0dp" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:id="@+id/button3"
            android:layout_marginTop="25dp"
            android:textColor="@color/textPrimaryWhite"
            android:background="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Approx distance (metres)"
            android:textColor="@color/textPrimaryBlack"
            android:id="@+id/distanceOld" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Precise distance (yards)"
            android:textColor="@color/primaryDark"
            android:id="@+id/distance" />

    </LinearLayout>


    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/buttonFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@color/primary"
        android:backgroundTint="@color/accent"
        materialdesign:animate="true"
        materialdesign:iconDrawable="@drawable/ic_action_new" />

</RelativeLayout>
