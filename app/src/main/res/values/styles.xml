<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorActivatedHighlight">@color/primaryLight</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimaryBlack</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textColorHint">@color/textHintBlack</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
    </style>
</resources>
